server {
	listen 80 default_server;
	listen [::]:80 default_server;

	root /var/www/html/www.gov.uk;

	index index.html;

	server_name _;
	location / {
	if ($request_uri ~ ^/(.*)/?index\.html) {
		return 302 /$1;
	}

	if ($request_uri ~ ^/(.*)\.html) {
		return 302 /$1;
	}

	try_files $uri $uri/index.html $uri.html =404;
	}
}
